@model MediaCollection.ServiceLayer.ViewModels.MovieViewModels.DeleteMovieViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Movie?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            <img src="../../@Model.Url" class="img-thumbnail" style="height:100px;width:70px" />
        </dd>

    </dl>
</div>
<div>
    <form asp-action="ConfirmDelete" asp-controller="Movie" method="post" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

   
    <a asp-controller="Movie" asp-action="Index">Back to List</a>
</div>
